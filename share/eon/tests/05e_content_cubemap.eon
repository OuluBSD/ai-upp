machine sdl.app:
	
	driver context:
		sdl.context
		
	chain program:
		
		loop image:
			center.customer
			center.image.loader[][loop == "texture"]:
				vflip = true
				cubemap = true
				swap_top_bottom = true
				filepath = "imgs/488bd40303a2e2b9a71987e48c66ef41f5e937174bf316d3ed0e86410784b919.jpg"
		
		loop texture:
			ogl.customer
			sdl.ogl.fbo.image[loop == "image"][loop == "screen"]
		
		loop screen:
			ogl.customer
			sdl.fbo[loop == "texture"]:
				buf0 = "cubemap"
				shader.frag.path = "shaders/toys/cubemap/copper_mirror_ball/stage0.glsl"
