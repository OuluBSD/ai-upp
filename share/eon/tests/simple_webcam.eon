machine sdl.app:
	
	driver context:
		sdl.context
	
	chain program:
		loop cam:
			center.customer
			center.video.webcam[][loop == "texture"]: vflip = "true"
		
		loop texture:
			ogl.customer
			ogl.fbo.image[loop == "cam"][loop == "screen"]
		
		loop screen:
			ogl.customer
			sdl.fbo[loop == "texture"]: filepath = "shaders/toys/simple/simple_webcam/stage0.glsl"
