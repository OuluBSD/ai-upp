machine sdl.app:

	driver context:
		sdl.context

	chain program:

		loop image:
			center.customer
			center.image.loader[][loop == "texture"]:
				vflip = true
				filepath = "uk_street.jpg"

		loop texture:
			ogl.customer
			sdl.ogl.fbo.image[loop == "image"][loop == "buffer2"]

		loop buffer2:
			ogl.customer
			sdl.ogl.fbo.side[loop == "texture", loop == "buffer1"][loop == "screen", loop == "buffer1"]:
				shader.frag.path = "shaders/toys/simple/simple_future_buffer/stage2.glsl"

		loop buffer1:
			ogl.customer
			sdl.ogl.fbo.side[loop == "buffer2"][loop == "buffer2"]:
				shader.frag.path = "shaders/toys/simple/simple_future_buffer/stage1.glsl"

		loop screen:
			ogl.customer
			sdl.fbo[loop == "buffer2"]:
				shader.frag.path = "shaders/toys/simple/simple_future_buffer/stage0.glsl"

		loop audio:
			center.customer
			center.audio.src.dbg_generator:
				waveform = "noise"
			sdl.audio.context[loop == "context"]

	driver audio:
		sdl.context