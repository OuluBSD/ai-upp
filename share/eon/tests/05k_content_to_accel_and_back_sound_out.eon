machine sdl.app:
	
	driver context:
		sdl.context
		
	chain program:
		
		loop audio_gen:
			center.customer
			center.audio.src.dbg_generator
			center.audio.side.src.center.user[][loop == "audio_conv_in"]
		
		loop audio_conv_in:
			ogl.customer
			sdl.ogl.center.fbo.audio[loop == "audio_gen"][loop == "audio_fx"]
		
		loop audio_fx:
			ogl.customer
			sdl.ogl.fbo.side[loop == "audio_conv_in"][loop == "audio_conv_out"]:
				type = "audio"
				shader.frag.path = "shaders/toys/simple/simple_sound_mixer/stage1.glsl"
				retarded.local.time = true
		
		loop audio_conv_out:
			ogl.customer
			sdl.ogl.fbo.center.audio[loop == "audio_fx"][loop == "audio_out"]
		
		loop audio_out:
			center.customer
			center.audio.side.sink.center.user[loop == "audio_conv_out"]
			sdl.audio
		
		loop screen:
			ogl.customer
			sdl.fbo.standalone:
				shader.frag.path = "shaders/toys/simple/simple_sound_mixer/stage0.glsl"
