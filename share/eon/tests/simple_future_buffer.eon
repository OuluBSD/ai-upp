machine sdl.app:
	
	driver context:
		sdl.context
	
	chain program:
		
		loop image:
			center.customer
			center.image.loader[][loop == "texture"]: vflip = true, filepath = "uk_street.jpg"
		
		loop texture:
			ogl.customer
			ogl.fbo.image[loop == "image"][loop == "screen"]
		
		loop buffer2:
			ogl.customer
			ogl.fbo.source[][loop == "screen"]: filepath = "shaders/toys/simple/simple_future_buffer/stage2.glsl"
		
		loop buffer1:
			ogl.customer
			ogl.fbo.source[][loop == "screen"]: filepath = "shaders/toys/simple/simple_future_buffer/stage1.glsl"
		
		loop screen:
			ogl.customer
			sdl.fbo[loop == "buffer2", loop == "buffer1", loop == "texture"]:
				filepath = "shaders/toys/simple/simple_future_buffer/stage0.glsl"
		
		loop audio:
			center.customer
			center.audio.src.dbg_generator:
				waveform = "noise"
			sdl.audio
